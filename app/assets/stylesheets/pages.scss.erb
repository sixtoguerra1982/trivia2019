body{
  color: white;
  background-image: url('<%=image_path('3.jpg')%>');
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  background-color: #66999;
}
.panelplay{
  margin: 30px;
}

.card-header{
  background-color: #ffc107;
  border: 0.5px solid rgba(255,255,255,0.5);
  color: blue;
}

.card{
  background-color: rgba(255,255,255,0.1);
  border: 0.5px solid rgba(255,255,255,0.5);
 -webkit-box-shadow: -8px 10px 5px 0px rgba(0,0,0,0.75);
 -moz-box-shadow: -8px 10px 5px 0px rgba(0,0,0,0.75);
  box-shadow: -8px 10px 5px 0px rgba(0,0,0,0.75);
  color: blue;
}

.dropdown-menu{
  background-color: #F1B371;
}
.mt-10{
  margin-top: 100px;
}

.notificaciones{
  position: fixed;
  bottom: 60vh;
  width: 80%;
  left: 10px;
  z-index: 1;
}

.alert{
  margin-top: 0;
}

.answerbody{
  display: none;
  padding: 30px;
  margin-top: 15px;
  margin-bottom: 15px;
  background-color: #ffc107;
  border: 1px solid white;
  border-radius: 10px;
}

.correcta{
  background-color: green;
}

.incorrecta{
  background-color: red;
}

.outrotativo{
	-webkit-animation: 1s outrotativo 1;
}

@-webkit-keyframes outrotativo{
	0%{
		opacity: 0;
		-webkit-transform: translateX(100%)
							rotate(-260deg);
	}
}
