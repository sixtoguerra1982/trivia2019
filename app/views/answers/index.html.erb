<%= render 'questions/form' %>

<label for="Answers List">Respuestas</label>
<% @answers.each do |answer| %>
  <ul>
    <li>
      <%= answer.answer %>
      <ol>
        <li><%= link_to "X", question_answer_path(answer.question_id, answer.id) , method: :delete %></li>
      </ol>
    </li>
  </ul>
<% end %>


<%= form_with(model: [@question, @answer], local: true) do |form| %>

  <%= form.hidden_field :question_id, value: @question.id %>

  <div class="field">
    <%= form.label :answer, "Respuesta" %>
    <%= form.text_field :answer %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to "Back", questions_path  %>
