<%= form_with(model: [@question, @answer], local: true) do |form| %>
  <div class="field">
    <%= form.label :answer, "Respuesta" %>
    <%= form.text_field :answer %>
  </div>
  <div class="field">
    <%= form.label :question_id, "Pregunta" %>
    <%= form.select :question_id, @questions.pluck(:description, :id) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
