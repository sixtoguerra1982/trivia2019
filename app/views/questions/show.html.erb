<div class="container">
  <div class="mt-10">
    <div class="panelplay">
      <div class="adminbodyresources">
          <%= render 'shared/navbarquestions' %>
          <p id="notice"><%= notice %></p>
          <p><strong>Description:</strong><%= @question.description %></p>
          <li><%= link_to 'Edit', edit_question_path(@question) %></li>
          <p><strong>Answers:</strong><%= @answers.count%><strong>/</strong><%= @limit_answers %></p>

          <ul>
            <% @answers.each do |answer| %>

              <li class="<%= answer.tipo.to_s=="true" ? 'correcta' : 'incorrecta' %>"><%= answer.answer %></li>

            <% end %>
          </ul>



          <%= link_to 'Back', questions_path %>
      </div>
    </div>
  </div>
</div>
