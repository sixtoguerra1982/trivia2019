<div class="container">
  <div class="mt-10">
    <div class="panelplay">
      <div class="adminbodyresources">
        <%= render 'shared/navbarquestions' %>
        <p id="notice"><%= notice %></p>

        <h1>Questions</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Description</th>
              <th colspan="4"></th>
            </tr>
          </thead>

          <tbody>
            <% @questions.each do |question| %>
                <tr>
                  <a href="#"></a>
                  <td><%= link_to question.description, question_answers_path(question) %></td>
                  <td><a href="<%=question_answers_path(question)%>"><span class="badge badge-success">Add Answers</span></a></td>
                  <td><%= link_to 'Show', question %></td>
                  <td><%= link_to 'Edit', edit_question_path(question) %></td>
                  <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Question', new_question_path %>
      </div>
    </div>
 </div>
</div>
